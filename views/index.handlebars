      <span class="scroll-to" data-scroll-element=".calculator">
        <img src="img/arrow-down.svg" class="arrow">
      </span>

    </div>
  </section>
  <div class="container">
    <section class="calculator">
      <div class="calculator-box clearfix">
        <header class="text-center">
          <h2>delivery calculator</h2>
          <p>calculate your delivery summary</p>
        </header>
        <div class="calc-body clearfix">
          <div class="col-left">
            <div class="wrapper">
              <div class="form-group-calc clearfix">
                <label for="calc-locations-number" class="pull-left">Number of Locations</label>
                <input type="number" class="field-calculator blinking-red" id="calc-locations-number" value="1">
              </div>
              <div class="form-group-calc clearfix">
                <label for="calc-orders" class="pull-left">Orders per day</label>
                <input type="number" class="field-calculator" id="calc-orders" value="">
              </div>
              <div class="form-group-calc clearfix">
                <label for="calc-drivers" class="pull-left">Drivers per shift (peak)</label>
                <input type="number" class="field-calculator chain-field field-small" id="calc-drivers" value="">
              </div>
              <div class="form-group-calc clearfix">
                <label for="calc-driver-salary" class="pull-left">Salary of driver <small>per month</small></label>
                <input type="number" class="field-calculator chain-field field-small" id="calc-driver-salary" value="">
              </div>
              <div class="form-group-calc clearfix">
                <label for="calc-manager-salary" class="pull-left">Salary of manager <small>per month</small></label>
                <input type="number" class="field-calculator chain-field field-small" id="calc-manager-salary" value="">
              </div>
              <div class="form-group-calc clearfix">
                <label for="calc-order-per-customer" class="pull-left">Value of order per customer</label>
                <input type="number" class="field-calculator" id="calc-order-per-customer" value="">
              </div>
              <div class="form-group-calc clearfix">
                <label for="calc-late-orders" class="pull-left">Late orders per day</label>
                <input type="number" class="field-calculator" id="calc-late-orders" value="">
              </div>
            </div>
          </div>
          <div class="col-right text-left">
            <h2 class="only-mobile text-center">Results</h2>
            <div class="wrapper">
              <table class="table table-simple">
                <thead>
                <tr>
                  <th>
                    Late Delivery Costs
                    <small>per day</small>
                  </th>
                  <th>
                    w/o OL
                  </th>
                  <th>
                    with OL
                  </th>
                </tr>
                </thead>
                <tbody>
                <tr>
                  <td><span class="hint--top" data-hint="Value of late orders based on&#10;late orders per day and value of order">late orders</span></td>
                  <td id="late-orders-wo"></td>
                  <td id="late-orders-w"></td>
                </tr>
                <tr>
                  <td><span class="hint--top" data-hint="25% of customers with late order&#10;will never use your restaurant again.&#10;Value of that customer is 2*average order value">lost customers</span>
                  </td>
                  <td id="lost-customers-wo"></td>
                  <td id="lost-customers-w"></td>
                </tr>
                <tr>
                  <td><span class="hint--top" data-hint="50% of customer with late order&#10;will reduce their ordering.&#10;Value of that customer is average order value.">disappointed customers</span>
                  </td>
                  <td id="disapointed-customers-wo"></td>
                  <td id="disapointed-customers-w"></td>
                </tr>
                </tbody>
              </table>

              <table id="direct-labor-table" class="table table-simple">
                <thead>
                <tr>
                  <th>
                    Direct Labor Costs
                    <small>per month</small>
                  </th>
                  <th>
                    w/o OL
                  </th>
                  <th>
                    with OL
                  </th>
                </tr>
                </thead>
                <tbody>
                <tr>
                  <td><span class="hint--top" data-hint="Orderlord reduces approximately 10% of drivers">drivers costs</span></td>
                  <td id="drivers-wo"></td>
                  <td id="drivers-w"></td>
                </tr>
                <tr>
                  <td><span class="hint--top" data-hint="Orderlord provides centralized management of delivery&#10;so 1 manager is sufficient.&#10;Otherwise one manager is used for each location.">delivery managers costs</span></td>
                  <td id="managers-wo"></td>
                  <td id="managers-w"></td>
                </tr>
                </tbody>
              </table>

              <table class="table table-simple">
                <thead>
                <tr>
                  <th colspan="3">
                    Financial Impact <small>per month</small>
                  </th>
                </tr>
                </thead>
                <tbody>
                <tr>
                  <td>
                    <span class="hint--top" data-hint="Sum of lost customers and&#10;dissapointed customers * 30 days">Lost revenue</span>
                  </td>
                  <td id="lost-revenue" class="red-color"></td>
                </tr>
                <tr>
                  <td>
                    <span class="hint--top" data-hint="Saved value on reducing late orders,&#10;if multiple locations additional savings&#10;on salaries of employees.">improvement using orderlord</span>
                  </td>
                  <td id="improvement-value" class="green-color" rel="tooltip"></td>
                </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>
